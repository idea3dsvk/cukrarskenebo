# Environment Variables - Vzorový súbor
# Skopírujte tento súbor ako .env.local a vyplňte skutočné hodnoty

# Gemini API Key (ak používate AI funkcie)
GEMINI_API_KEY=your_gemini_api_key_here

# EmailJS konfigurácia
EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here
EMAILJS_SERVICE_ID=service_qghioic
EMAILJS_TEMPLATE_ID=template_objednavka

# Admin heslo (použite silné heslo!)
ADMIN_PASSWORD=your_secure_admin_password_here

# Email obchodu
SHOP_EMAIL=your_shop_email@example.com
